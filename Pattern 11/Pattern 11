#include <iostream>
using namespace std;

int main()
{
    int space, rows,k=0;

    cout <<"Enter number of rows: ";
    cin >> rows;

    for(int i = 1;i<= rows-1; i++)
    {
        k=0;
        for(space = 1; space <= rows-i;space++)
        {
            cout <<"*";
        }

        while(k != 2*i-1)
        {
            cout <<" ";
            k++;
            
        }
            
        for(int l=i;l<=rows;l++)
        {
               
            cout<<"*";
        }
           
        
        cout << endl;
    }
    
    for(int i =rows-1; i>0; i--)
    {
        k=0;
        for(space = 1; space <= rows-i;space++)
        {
            cout <<"*";
        }

        while(k != 2*i-1)
        {
            cout <<" ";
            k++;
        }
        for(int l=i;l<=rows;l++)
        {
               
            cout<<"*";
        }
        cout << endl;
    }    
    return 0;
    
    
}

